{
  "name": "vorms",
  "packageManager": "pnpm@7.11.0",
  "description": "vue form validate",
  "scripts": {
    "build:core": "pnpm --filter @vorms/core build",
    "build:resolvers": "pnpm --filter @vorms/resolvers build",
    "dev": "pnpm -r --parallel run dev",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:serve": "vitepress serve docs",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "lint": "eslint './packages/**/*.{js,ts}'",
    "lint:fix": "pnpm lint --fix",
    "play": "cd playground && pnpm dev",
    "prepare": "husky install",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "publish:ci": "esno scripts/publish.ts"
  },
  "lint-staged": {
    "{packages}/**/*.{js,ts}": [
      "pnpm lint:fix",
      "pnpm format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom"
      ]
    }
  },
  "license": "MIT",
  "author": "Alex Liu <dsa1314@gmail.com>",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-replace": "^4.0.0",
    "@stackblitz/sdk": "^1.8.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vitest/coverage-c8": "^0.24.3",
    "@vue/test-utils": "^2.2.0",
    "consola": "^2.15.3",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esno": "^0.14.1",
    "fs-extra": "^10.1.0",
    "husky": "^7.0.0",
    "jsdom": "^20.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "typescript": "^4.6.3",
    "vitepress": "^1.0.0-alpha.28",
    "vitest": "^0.24.3",
    "vue": "^3.0.0"
  }
}
